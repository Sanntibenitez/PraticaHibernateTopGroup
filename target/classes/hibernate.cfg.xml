<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<!-- Database connection settings -->
		<property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
		<!-- <property name="hibernate.connection.url">jdbc:hsqldb:file:database/practicedb</property> -->
		<property name="hibernate.connection.url">jdbc:hsqldb:database/practicedb</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.connection.pool_size">3</property>

		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">create</property>

		<property name="hibernate.current_session_context_class">org.hibernate.context.ThreadLocalSessionContext</property>

		<property name="hibernate.connection.autocommit">true</property>
		<!-- SQL dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>

		<!-- mappings -->
		<mapping class="com.tg.practice.model.Categoria" />
		<mapping class="com.tg.practice.model.EstadoPedido" />
		<mapping class="com.tg.practice.model.Familia" />
		<mapping class="com.tg.practice.model.Maquina" />
		<mapping class="com.tg.practice.model.Medida" />
		<mapping class="com.tg.practice.model.Pedido" />
		<mapping class="com.tg.practice.model.Producto" />
		<mapping class="com.tg.practice.model.Stock" />
		<mapping class="com.tg.practice.model.StockPK" />	
		<mapping class="com.tg.practice.model.SubFamilia" />
		<mapping class="com.tg.practice.model.TipoProducto" />	

		<!-- Model 1 -->


		<!-- Model 2 -->
	

	</session-factory>
</hibernate-configuration>